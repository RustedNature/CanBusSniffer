<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:CanBusSniffer.ViewModels"
             x:Class="CanBusSniffer.Views.BluetoothPage"
             x:DataType="vm:BluetoothConnectionVM"
             Title="Select Bluetooth Device">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <CollectionView  Grid.ColumnSpan="2">
        </CollectionView>

        <Button Text="New Scan" Grid.Row="1" Margin="5" Command="{Binding NewScanCommand}" />
        <Button Text="Select Device" Grid.Row="1" Grid.Column="1"  Margin="5" Command="{Binding SelectDeviceCommand}" />
    </Grid>
</ContentPage>