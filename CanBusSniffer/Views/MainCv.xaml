<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CanBusSniffer.Views.MainCv"
             xmlns:viewmodel="clr-namespace:CanBusSniffer.ViewModels"
             xmlns:m="clr-namespace:CanBusSniffer.Models"
             x:DataType="viewmodel:MainVm">
    <VerticalStackLayout>

        <Button Text="Blue" HorizontalOptions="End" Command="{Binding OpenBluetoothMenuCommand}" />

        <CollectionView ItemsSource="{Binding CanFrames}">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout ItemSpacing="10" Orientation="Vertical" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="m:CanFrame">
                    <StackLayout>
                        <Label Text="{Binding FrameID, StringFormat='0x{0:X}'}" TextColor="AntiqueWhite" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentView>